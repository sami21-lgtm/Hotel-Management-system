import os

def check_project_dirs():
    for folder in ['migrations', 'static', 'templates', 'tests']:
        if os.path.isdir(folder):
            print(f"{folder}/ folder exists.")
        else:
            print(f"{folder}/ folder is missing.")
    if os.path.isfile('hotel.db'):
        print("hotel.db file exists. (optional)")
    else:
        print("hotel.db file is missing. (optional)")

if __name__ == "__main__":
    check_project_dirs()
